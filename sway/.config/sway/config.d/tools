#
# Basics:
#
# Start a terminal
bindsym $mod+Return exec $term

# Kill focused window
bindsym $mod+Shift+q kill

# Start your launcher
bindsym $mod+Space exec $menu

# Lockscreen
bindsym $mod+l exec swaylock -c '#000000'

# Desktop portal
exec /usr/libexec/xdg-desktop-portal -r

#
# Screen capture:
#

# Send to both file and clipboard
# Select zone
bindsym Print exec bash -c "slurp | grim -g - - | tee ~/scr-$(date -Is).png | wl-copy -t image/png"
# Full screen
bindsym $mod+Print exec bash -c "grim - | tee ~/scr-$(date -Is).png | wl-copy -t image/png"


#
# Backlight
# 
exec gammastep
