# Read `man 5 sway` for a complete reference.

### Variables
#
# mod keys: we move between windows with Super,
# between workspaces with Alt
# we add Shift to move things instead
set $mod Mod4
set $mod_ws Mod1

set $term kitty
set $menu wofi --show drun | xargs swaymsg exec --
set $primary eDP-1
set $secondary HDMI-A-1

output * bg ~/.local/share/backgrounds/wall.png fill

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
floating_modifier $mod normal

# Reload the configuration file
bindsym $mod+Shift+c reload

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exec swaynag -t warning -m 'Exit session ?' -B 'Yay' 'swaymsg exit'

include /etc/sway/config.d/*
include /home/jonathan/.config/sway/config.d/*
